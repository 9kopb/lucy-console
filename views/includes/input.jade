.recipe-input(ng-controller="Parameter")
  .form-group(ng-if="!parameter.enum && (parameter.type === 'string' || parameter.type === 'number' || parameter.type === 'integer')")
    label {{parameter.name}}
    input.input-sm.form-control(type="{{ parameter.type === 'string' ? 'text' : 'number' }}",
          ng-change="onAnswerChanged()",
          ng-model="model[parameter.name]")
    span.help-block(ng-if="parameter.description" marked="parameter.description")

  .form-group(ng-if="parameter.enum")
    label
      span {{parameter.name}}
      a.btn.btn-xs.text-warning(
            ng-show="model[parameter.name] !== undefined && !parameter.required"
            ng-click="model[parameter.name] = undefined; onAnswerChanged()")
        i.fa.fa-remove
        span &nbsp;clear
    span.help-block(ng-if="parameter.description" marked="parameter.description")
    .radio-choice(ng-repeat="choice in parameter.enum")
      label.text-black.radio-inline
        input(type="radio",
              ng-change="onAnswerChanged()",
              ng-model="model[parameter.name]",
              ng-value="choice"
              ng-checked="choice === model[parameter.name]")
        span {{ choice }} 

  .form-group(ng-if="parameter.type === 'boolean'")
    label
      span {{ parameter.name }}
      input.checkbox(type="checkbox",
            ng-change="onAnswerChanged()",
            ng-model="model[parameter.name]")
    span.help-block(ng-if="parameter.description" marked="parameter.description")

  .form-group(ng-if="parameter.type === 'array'" ng-controller="DynamicArray")
    label {{parameter.name}}
    span.help-block(ng-if="parameter.description" marked="parameter.description")
    .input-group(ng-repeat="item in items")
      span.input-group-btn
        button.btn.btn-sm.btn-width-sm.btn-warning(ng-click="removeItem($index)")
          i.fa.fa-remove  
      input.input-sm.form-control(ng-model="item.value"
                                  ng-change="onAnswerChanged()")
    .input-group
      span.input-group-btn
        button.btn.btn-sm.btn-width-sm.btn-default(ng-click="addItem()")
          span.fa.fa-plus
          span &nbsp; Add
      input.input-sm.form-control(disabled)
